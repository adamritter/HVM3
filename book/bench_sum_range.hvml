data List { #Nil #Cons{ head tail } }

@sum(!xs r) = ~xs !r {
  #Nil: r
  #Cons{head tail}: @sum(tail (+ head r))
}

@range(n xs) = ~n !xs {
  0: xs
  p: !&0{p0 p1}=p @range(p0 #Cons{p1 xs})
}

@main = @sum(@range(100_000_000 #Nil) 0)

